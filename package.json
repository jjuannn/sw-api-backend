{
  "name": "sw-api-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "prestart:prod": "npm run migration:run",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test:cleanup": "rimraf ./data/database",
    "test:coverage": "cross-env NODE_ENV=automated_tests jest --coverage",
    "test": "run-s test:coverage test:cleanup",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:generate": "npm run typeorm -- migration:generate -d src/config/db.config.ts src/migrations/%npm_config_name%",
    "migration:run": "node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run -d dist/src/config/db.config.js",
    "migration:revert": "node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:revert -d dist/src/config/db.config.js"
  },
  "dependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.3.1",
    "@nestjs/typeorm": "^10.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/dotenv": "^8.2.0",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^9.6.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cross-env": "^7.0.3",
    "cross-var": "^1.1.0",
    "dotenv": "^16.4.5",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "npm-run-all": "^4.1.5",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.0",
    "rimraf": "^5.0.7",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "typeorm-fixtures-cli": "^4.0.0",
    "typeorm-naming-strategies": "^4.1.0"
  },
  "devDependencies": {
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "<rootDir>/modules/**/*.(t|j)s"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/modules/.*\\.decorator\\.(t|j)s$",
      "<rootDir>/modules/.*\\.dto\\.(t|j)s$"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
